<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Txt_S17_C2">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="Txt_S15_C_avocado">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/main_color_avocado</item>
    </style>

    <style name="Txt_S15_C3">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black_333</item>
    </style>
    <style name="Txt_S15_C9">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black_999</item>
    </style>

    <style name="Txt_Main" parent="Txt_S15_C9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
